extends layout
  


block content
  include fieldutils
  script.
    $(document).ready(function(){
      $('.selectpicker').selectpicker({
        style: 'btn-info',
        size: 4
      });
      $('.selectpicker.project').change(function(){
        console.log($(this).val());
        
      });
    });
      
  h1 Create Issue
  form
    select.selectpicker.show-tick.project(data-live-search="true")
      for project in data
        option(value=project.key,data-size="8",data-content="<img src=\""+project.avatarUrls['16x16']+"\" width=\"16\" height=\"16\"/> "+project.name) #{project.name}
    
