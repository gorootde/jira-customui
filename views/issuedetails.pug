include fieldutils


div.panel.panel-default
  div.panel-body
    h4
      span #{data.key}
      +space
      span.text-muted #{data.fields['summary']}
    table.table
      tbody
        each field in fields
          tr
            td #{field.label}
            td
              if field.value == "issuekey"
                +renderField(field.value,data.key)
              else
                +renderField(field.value,data.fields[field.value])  
          
            


        
      
